@model Company



<form method="post" asp-action="CompanyUpsert">
            <input asp-for="CompanyId" hidden/>
            
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">@(Model.CompanyId!=0?"Update":"Add")Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
       
            <div class="row">
              
                    <div class="border p-3 ">

                        <div class="mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="PhoneNumber"></label>
                            <textarea asp-for="PhoneNumber" class="form-control"></textarea>

                        </div>
                        <div class="mb-3">
                            <label asp-for="City"></label>
                            <input asp-for="City" class="form-control"/>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label  asp-for="StreetAddress"></label>
                            <input asp-for="StreetAddress" class="form-control border-0 shadow"/>
                              <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="col-6 col-md-3">
                            @if (Model.CompanyId != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" >
                                    Back to List
                                </a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" >
                                    Back to List
                                </a>
                            }
                        </div>
                       
                    </div>
                </div>
               
            </div>
           
        </div>
      </form>
