@model List<Company>




@if (TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script type="text/javascript">toastr.success('@TempData["success"]');</script>

}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="CompanyUpsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add a new Company
            </a>
        </div>
    </div>
    <br/>
    <table  id="tblData"  class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>Name</th>
            <th>PhoneNumber</th>
            <th>City</th>
            <th>StreetAddress</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.PhoneNumber
                </td>
                <td width="50%">
                    @obj.City
                </td>
                 <td width="50%">
                     @obj.StreetAddress
                 </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Company" asp-action="CompanyUpsert" asp-route-id="@obj.CompanyId"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Company" asp-action="CompanyRemove" asp-route-id="@obj.CompanyId"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>











