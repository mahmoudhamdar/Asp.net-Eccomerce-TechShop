@model ProductVM



<form method="post" asp-action="ProductUpsert" enctype="multipart/form-data">
            <input asp-for="Product.ProductID" hidden/>
            <input asp-for="Product.ImgUrl" hidden/>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">@(Model.Product.ProductID!=0?"Update":"Add")Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
       
            <div class="row">
                <div class="col-10">
                    <div class="border p-3 ">

                        <div class="mb-3">
                            <label asp-for="Product.Name"></label>
                            <input asp-for="Product.Name" class="form-control"/>
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="Product.Description"></label>
                            <textarea asp-for="Product.Description" class="form-control"></textarea>

                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Price"></label>
                            <input asp-for="Product.Price" class="form-control"/>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class=" py-2 col-12">
                            <label asp-for="@Model.Product.CategoryId"></label>
                           
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                                <option disabled selected>--Select Category--</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label  asp-for="Product.ImgUrl"></label>
                            <input type="file" name="file"  class="form-control border-0 shadow"/>
                        </div>
                        <div class="col-6 col-md-3">
                            @if (Model.Product.ProductID != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" >
                                    Back to List
                                </a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control" >
                                    Back to List
                                </a>
                            }
                        </div>
                       
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Product.ImgUrl" width="100%"
                         style="border-radius: 5px;border: 1px solid white"/>
                </div>
            </div>
           
        </div></div>
      </form>
