@model IEnumerable<Product>
<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImgUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5  opacity-75 text-uppercase text-center">@product.Name</p>
                                <p class="card-title text-warning  text-center">@product.Price$"</p>
                            </div>
                        </div>
                        <div> <a asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-primary bg-gradient border-0 form-control"
                                     >Details</a></div>
                    </div>
                </div>
            </div>
        </div>
    }
         
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Tech shop - <a asp-area="" asp-controller="Home" asp-action="Index">About
            Us</a>
    </div>
</footer>
</div>
